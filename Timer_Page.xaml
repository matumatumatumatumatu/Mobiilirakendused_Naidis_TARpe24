<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Naidis_TARpe24.Timer_Page"
             Title="Timer_Page">
    <VerticalStackLayout>
        <Label x:Name="lbl" 
               Text="Vajuta nupule ja siia"
   FontSize="Medium"
   BackgroundColor="Beige">
            
                <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
            </Label.GestureRecognizers>
        </Label>
        <Button x:Name="timer_btn" 
                Text="Naita info"
                FontSize="Large"
                Clicked="timer_btn_Clicked" 

        ></Button>
        <Button x:Name="tagasi"
                Text="Tagasi"
                FontSize="Large"
                Clicked="tagasi_Clicked"
            
        ></Button>
    </VerticalStackLayout>
</ContentPage>